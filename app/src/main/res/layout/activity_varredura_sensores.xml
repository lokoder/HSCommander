<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hackstyle.org.activity.VarreduraSensoresActivity"
    android:background="@drawable/irongrip_repeating"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escaneando rede..."
        android:id="@+id/txtStatus"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:progress="1"
        android:max="254"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:indeterminate="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sensores cadastrados:"
            android:id="@+id/textView5"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txtNumSensoresCadastrados"
            android:layout_weight="0.5"
            android:textColor="#3030d8"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sensores encontrados:"
            android:id="@+id/textView7"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txtNumSensoresEncontrados"
            android:layout_weight="0.5"
            android:textColor="#5bcb59"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>

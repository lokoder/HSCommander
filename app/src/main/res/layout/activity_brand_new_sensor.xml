<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hackstyle.org.activity.BrandNewSensorActivity"
    android:background="@drawable/irongrip_repeating"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/layoutNomeSensor"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Sensor"
                android:id="@+id/txtNomeSensor"
                android:layout_marginTop="20dp"
                android:textColor="#ababab"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtNomeSensor"
                android:backgroundTint="#7c7c7c"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/imageViewNovoSensor"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambiente"
        android:id="@+id/txtAmbiente"
        android:textColor="#ababab"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutAmbiente"
        android:layout_below="@id/layoutNomeSensor">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinAmbiente"
            android:layout_weight="0.7"
            android:backgroundTint="#b5b0b0"
            android:layout_marginTop="4dp" />


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btnAddAmbiente"
            android:layout_weight="0.1"
            android:textColor="#ffffff"
            android:backgroundTint="#585555"
            android:layout_gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargas"
        android:id="@+id/txtHeader2"
        android:layout_centerHorizontal="true"
        android:longClickable="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:background="#6c6c6c"
        android:layout_below="@id/layoutAmbiente" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutTituloAparelho1"
        android:layout_below="@id/txtHeader2"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aparelho 1"
            android:id="@+id/txtAparelho1"
            android:layout_weight="0.7"
            android:textColor="#ababab"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saída"
            android:id="@+id/txtSaida1"
            android:layout_weight="0.3"
            android:textColor="#ababab"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutDadosAparelho1"
        android:layout_below="@id/layoutTituloAparelho1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtAparelho1"
            android:layout_weight="0.7"
            android:backgroundTint="#7c7c7c"
            android:textColor="#ffffff" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinSaida1"
            android:layout_weight="0.2"
            android:backgroundTint="#b5b0b0"
            android:spinnerMode="dropdown"
            android:visibility="visible"
            android:padding="0dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutTituloAparelho2"
        android:layout_below="@id/layoutDadosAparelho1"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aparelho 2"
            android:id="@+id/txtAparelho2"
            android:layout_weight="0.7"
            android:textColor="#ababab"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saída"
            android:id="@+id/txtSaida2"
            android:layout_weight="0.3"
            android:textColor="#ababab"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDadosAparelho2"
        android:layout_below="@id/layoutTituloAparelho2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtAparelho2"
            android:layout_weight="0.7"
            android:backgroundTint="#7c7c7c"
            android:textColor="#ffffff" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinSaida2"
            android:layout_weight="0.2"
            android:backgroundTint="#b5b0b0"
            android:spinnerMode="dropdown"
            android:visibility="visible"
            android:padding="0dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/btnContinuar"
        android:textColor="#ffffff"
        android:backgroundTint="#585555"
        android:layout_below="@id/layoutDadosAparelho2"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:maxHeight="40dp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="40dp" />

</LinearLayout>
